# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database - PostgreSQL
# Prefer using DATABASE_URL when available; otherwise configure individual fields.
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require&channel_binding=require

# Database - MongoDB
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@host/?appName=ReqNexaAI

# AI API - Google Gemini
GEMINI_API_KEY=

# JWT Secret (generate random strings)
JWT_SECRET=
JWT_REFRESH_SECRET=

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# CORS
# Allow multiple dev origins separated by commas
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
